{
    "$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "linter": {
        "enabled": true,
        "rules": {
            "style": {
                "noNonNullAssertion": "off"
            }
        }
    },
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    },
    "files": {
        "includes": ["**/*", "!dist", "!node_modules"]
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single"
        }
    }
}
